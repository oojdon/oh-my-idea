<idea-plugin url="">
    <name>Oh My IDEA</name>
    <id>oh-my-idea</id>
    <description>coding with java without mouse</description>
    <version>1.0</version>
    <vendor>JetBrains</vendor>

    <depends>com.intellij.modules.lang</depends>

    <application-components>
        <component>
            <implementation-class>com.codingbaby.ohmyidea.OhPlugin</implementation-class>
        </component>
    </application-components>


    <extensions defaultExtensionNs="com.intellij">
        <completion.contributor language="any" implementationClass="com.codingbaby.ohmyidea.extensions.SnippetCompletionContributor"/>
    </extensions>



    <actions>

        <action id="OH_ShortcutKeyAction" class="com.codingbaby.ohmyidea.ShortcutKeyAction" text="Shortcuts"/>

        <action id="OH_MotionFirstLine" class="com.codingbaby.ohmyidea.action.MotionGotoLineFirstAction" text="First Line"/>
        <action id="OH_MotionLastLine" class="com.codingbaby.ohmyidea.action.MotionGotoLineLastAction" text="Last Line"/>
        <action id="OH_MotionToLine" class="com.codingbaby.ohmyidea.action.MotionToLineAction" text="Motion To Line"/>


        <action id="OH_MotionToMatchChar" class="com.codingbaby.ohmyidea.action.MotionToMatchCharAction" text="Motion To Match"/>

        <action id="OH_ShowCommandAction" class="com.codingbaby.ohmyidea.action.ShowCommandAction" text="Show Command"/>

        <action id="OH_LoadScriptAction" class="com.codingbaby.ohmyidea.action.LoadScriptAction" text="Load Script"/>

        <action id="OH_ScrollToTop" class="com.codingbaby.ohmyidea.action.ScrollToScreenFirstAction" text="Scroll Top"/>

        <action id="OH_NotQuickInsert" class="com.codingbaby.ohmyidea.action.NotQuickInsertAction" text="Insert Not Quick"/>

        <action id="OH_ShowHelpDialog" class="com.codingbaby.ohmyidea.action.ShowHelpDialogAction" text="Show Help Dialog"/>

        <action id="OH_EditorDeleteToFileEnd" class="com.codingbaby.ohmyidea.action.DeleteToFileEndAction" text="Delete To File End"/>

        <action id="OH_RepeatCurrentAction" class="com.codingbaby.ohmyidea.action.RepeatCurrentAction" text="Repeat Current Action"/>

        <action id="OH_ShowUIToggleActions" class="com.codingbaby.ohmyidea.action.ShowUIToggleActions" text="Control UIToggle Actions"/>

        <action id="OH_SwitchWindowAction" class="com.codingbaby.ohmyidea.action.SwitchWindowAction" text="Switch Project Window"/>

        <action id="OH_ShowEnglishWordActions" class="com.codingbaby.ohmyidea.ShowEnglishWordAction" text="Show Word"/>

    </actions>


</idea-plugin>
