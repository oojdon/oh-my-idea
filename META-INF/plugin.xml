<idea-plugin url="http://plugins.jetbrains.com/plugin/164">
    <name>Oh My IDEA</name>
    <id>oh-my-idea</id>
    <description>plugin like ideavim,but not like ideavim</description>
    <version>1.0</version>
    <vendor>JetBrains</vendor>


    <depends>com.intellij.modules.lang</depends>


    <application-components>
        <component>
            <implementation-class>com.codingbaby.ohmyidea.OhPlugin</implementation-class>
        </component>
    </application-components>


    <actions>

        <action id="PluginToggle" class="com.codingbaby.ohmyidea.PluginToggle" text="Oh My IDEA"
                description="Toggle the Plugin On/Off">
            <keyboard-shortcut first-keystroke="control shift o" keymap="$default"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>


        <action id="MotionFirstLine" class="com.codingbaby.ohmyidea.action.MotionGotoLineFirstAction" text="First Line"/>
        <action id="MotionLastLine" class="com.codingbaby.ohmyidea.action.MotionGotoLineLastAction" text="Last Line"/>
        <action id="MotionAndInsert" class="com.codingbaby.ohmyidea.action.MotionAndInsertAction" text="Motion And Insert"/>
        <action id="MotionToLine" class="com.codingbaby.ohmyidea.action.MotionToLineAction" text="Motion To Line"/>


        <action id="ShortcutKeyAction" class="com.codingbaby.ohmyidea.ShortcutKeyAction" text="Shortcuts"/>

        <action id="MotionToMatchChar" class="com.codingbaby.ohmyidea.action.MotionToMatchCharAction" text="Shortcuts"/>

        <action id="ShowCommandAction" class="com.codingbaby.ohmyidea.action.ui.ShowCommandAction" text="Shortcuts"/>

        <action id="LoadScriptAction" class="com.codingbaby.ohmyidea.action.LoadScriptAction" text="Shortcuts"/>

    </actions>


</idea-plugin>
